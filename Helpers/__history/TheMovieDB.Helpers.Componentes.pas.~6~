unit TheMovieDB.Helpers.Componentes;

interface

uses
  Vcl.Controls;

type
  TComponenteHelper = class Helper for TWinControl
  public
    procedure Focar;
  end;

implementation

{ TComponenteHelper }

procedure TComponenteHelper.Focar;
begin
  if CanFocus then
  begin
    SetFocus;
  end;
end;

end.
