unit TheMovieDB.Helpers.TheMovieDB;

interface

uses
  REST.Client;

type
  THelpersTheMovieDB = class abstract
    class function StatusOK(const pStatusCode: Integer): Boolean;
  end;

  THelperRequest = class Helper for TRESTRequest
    function StatusOK: Boolean;
  end;

implementation

{ THelpersTheMovieDB }

class function THelpersTheMovieDB.StatusOK(const pStatusCode: Integer): Boolean;
begin
  Result := (pStatusCode >= 200) and (pStatusCode <= 299);
end;

{ THelperRequest }

function THelperRequest.StatusOK: Boolean;
begin
  if Response = nil then
  begin

  end;

  Result := (Response.StatusCode >= 200) and (Response.StatusCode <= 299);
end;

end.
